        </div>
    </div>
    {{!-- Courses --}}
    <div class="home-wrapper-1 home-pd-40 home-mt-70">
        <h2 class="wrapper-header">Khóa học Pro</h2>
        <div class="d-inline-flex flex-wrap home-course-margin">
            {{#each courses}}
            <div class="col-sm-6 col-lg-3">
                <div class="card card-course-item">
                    <a class="position-relative card-img-top-a" href="/courses/{{this.slug}}">
                        <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                    </a>
                    <div class="card-body">
                        <a href="/courses/{{this.slug}}">
                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <div class="card-text">
                            <i class="fa-solid fa-user-group mr-2"></i>
                            <span>{{this.followed}}</span>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <div class="home-wrapper-2 home-pd-40 home-mt-70">
        <h2 class="wrapper-header">Khóa học Miễn phí</h2>
        <div class="d-inline-flex flex-wrap home-course-margin">
            {{#each courses}}
            <div class="col-sm-6 col-lg-3">
                <div class="card card-course-item">
                    <a class="position-relative card-img-top-a" href="/courses/{{this.slug}}">
